{
  "env": {
    "node": true,
    "es2021": true,
    "commonjs": false
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "script"
  },
  "rules": {
    "no-undef": "off",
    "@typescript-eslint/no-require-imports": "on"
  },
  "globals": {
    "require": "readonly",
    "module": "readonly",
    "exports": "readonly",
    "process": "readonly",
    "__dirname": "readonly",
    "__filename": "readonly"
  }
}
